{
  "name": "@yusuke4869/mahjong",
  "description": "mahjong yaku judgment and score calculation",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "author": "Yusuke4869",
  "scripts": {
    "dev": "ts-node-dev src/main.ts",
    "build": "rm -rf ./dist && tsc --project ./tsconfig.build.json",
    "start": "node dist/main.js",
    "lint": "eslint --ignore-path .gitignore src/**/*.ts",
    "lint:fix": "eslint --ignore-path .gitignore src/**/*.ts --fix",
    "format": "prettier --write --ignore-path .gitignore **/*.ts",
    "format:check": "prettier --check --ignore-path .gitignore **/*.ts",
    "test": "jest --config ./jest.config.cjs",
    "test:watch": "jest --watch --config ./jest.config.cjs",
    "prepare": "husky install"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "yarn lint:fix",
      "yarn format"
    ]
  },
  "packageManager": "yarn@3.6.3",
  "volta": {
    "node": "18.17.1"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.2",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  }
}
